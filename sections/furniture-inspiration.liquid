<script src="{{ 'furniture-inspiration-slider.js' | asset_url }}" defer="defer"></script>
<section class="furniture-inspiration">
    <div class="furniture-inspiration__content">
        <h2 class="furniture-hero__title">{{ section.settings.title }}</h2>
        <p class="furniture-hero__paragraph">{{ section.settings.paragraph | strip_html }}</p>
        <a 
            href="{{ section.settings.link }}" 
            class="btn btn--medium btn--green" 
            style="background-color: {{  section.settings.button_color }};"
        >
                {{ section.settings.button_text }}
        </a> 
    </div>
    <div class="furniture-inspiration__slider furniture-inspiration__slider-js">
        {% for block in section.blocks %}
            <div class="furniture-inspiration__slide">
                <img src="{{ block.settings.image | image_url }}" alt="" width="" height="">
            </div>
        {% endfor %}
    </div>     
</section>
<style scoped>
   .furniture-inspiration{
        align-items: center;
        background: var(--green-light);
        display: grid;
        grid-template-columns: 1fr 860px;
        justify-content: center;
        margin: 40px 0;
        overflow: hidden;
        padding: 50px 0;
    }
    .furniture-inspiration__content{
        padding: 100px;
    }
    .furniture-inspiration__slider{
        .slick-arrow{
            position: absolute;
            top: 30%;
            z-index: 1;
        }
        .slick-prev{
            display: none !important;
        }
        .slick-next{
            background-image: url(https://cdn.shopify.com/s/files/1/0792/7693/3304/files/arrow-right.svg?v=1732639368);
            background-color: var(--white);
            background-repeat: no-repeat;
            background-position: center;
            border: 0;
            border-radius: 100%;
            box-shadow: 0 0 2px 2px rgba(0, 0, 0, 0.1);
            height: 48px;
            right: 20px;
            text-indent: -9999px;
            width: 48px;
        }
        .slick-dots{
            display: flex;
            gap: 15px;
            position: absolute;
            right: 215px;
            bottom: 50px;
            button{
                background: #D8D8D8;
                border: 0;
                border-radius: 10px;
                height: 12px;
                text-indent: -9999px;
            }
            .slick-active{
                button{
                    background: var(--green);
                    position: relative;
                }
                button:after{
                    border: 1px solid var(--green);
                    content: '';
                    border-radius: 100%;
                    height: 20px;
                    width: 20px;
                    position: absolute;
                    left: -5px;
                    right: 0;
                    top: -5px;
                }
            }
        }
    }
    .furniture-inspiration__slide{
        margin-right: 30px;
        height: 400px;
        width: 304px;
        img{
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
        &.slick-current{
            height: 500px;
            width: 404px;
        }
    }
</style>    
